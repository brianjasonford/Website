---
pagination:
    data: collections
    size: 1
    alias: tag
    filter:
        - posts
permalink: /tags/{{ tag | slug }}/
layout: /layouts/base
---

<h2>Tagged: {{ tag }}</h2>

{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
    <strong><p>{{ post.data.date | correctISO }} &mdash; <a href="{{ post.url }}">{{ post.data.title }}</a></strong><br>
    <em>{{ post.data.blurb }}</em></p>
{% endfor %}